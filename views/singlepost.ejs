<div class="post">
  <div class="post-header">
    <img src="./assets/<%= post.photo_profile %>" />
    <small class="created_date"
      ><%= new Date(post.created_date).toLocaleDateString("en-GB",{ weekday:
      'long', year: 'numeric', month: 'long', day: 'numeric' }) %></small
    >
  </div>
  <img src="./assets/<%= post.image %>" class="image" />
  <p><%= post.description %></p>
  <div class="divlike">
    <input
      class="like_button"
      type="image"
      src="./assets/likebutton.png"
      alt="like_button"
      data-like="<%= post.id %>"
    />
    <span class="span_like" data-like="<%= post.id %>"><%= post.likes %></span>
    <button class="delete" data-del="<%= post.id %>">Delete</button>
  </div>
</div>

